{
  "name": "mermaid-editor",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --names \"NEXT,WS\" --prefix-colors \"cyan,magenta\" \"next dev -p 4025\" \"node scripts/start-websocket-server.js\"",
    "dev:next": "next dev -p 4025",
    "dev:ws": "node scripts/start-websocket-server.js",
    "build": "next build",
    "start": "next start -p ${PORT:-4025}",
    "start:ws-only": "node scripts/start-websocket-server.js",
    "start:separated": "concurrently --kill-others-on-fail --names \"NEXT,WS\" --prefix-colors \"cyan,magenta\" \"next start -p 4025\" \"node scripts/start-websocket-server.js\"",
    "start:next": "next start -p 4025",
    "start:ws": "node scripts/start-websocket-server.js",
    "lint": "eslint .",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:setup": "node scripts/setup-database.js"
  },
  "dependencies": {
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@google/generative-ai": "^0.24.1",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "@mui/material-nextjs": "^7.3.5",
    "@types/ws": "^8.18.1",
    "bcryptjs": "^2.4.3",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "mermaid": "^11.0.0",
    "monaco-editor": "^0.54.0",
    "next": "^16.0.1",
    "next-auth": "5.0.0-beta.30",
    "pg": "^8.11.0",
    "puppeteer": "^24.29.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "^0.34.4",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.0.1",
    "typescript": "^5.9.3"
  }
}